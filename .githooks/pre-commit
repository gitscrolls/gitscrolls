#!/bin/bash

# Pre-commit hook for GitScrolls
# Validates style before allowing commits

# Add color support
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Only run validation on scroll files that are being committed
echo -e "${BLUE}üîç Pre-commit hook: Checking for GitScroll files...${NC}"
SCROLL_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "scrolls/.*\.md$")

if [ -z "$SCROLL_FILES" ]; then
    echo -e "${YELLOW}üìã No scroll files in this commit. Skipping validation.${NC}"
    exit 0
fi

echo -e "${GREEN}üìú Found scroll files to validate:${NC}"
echo "$SCROLL_FILES" | sed 's/^/   ‚Ä¢ /'
echo ""

echo -e "${BLUE}üîç Pre-commit: Running GitScrolls style validation...${NC}"

# Run the master validation script
if bash .githooks/validate-gitscrolls-style.sh; then
    echo -e "${GREEN}‚úÖ Pre-commit validation passed!${NC}"
    exit 0
else
    echo -e "\n${RED}‚ùå Pre-commit validation failed!${NC}"
    echo -e "${YELLOW}Fix the style issues above before committing.${NC}"
    echo -e "\n${YELLOW}To bypass this check (not recommended), use: git commit --no-verify${NC}"
    exit 1
fi