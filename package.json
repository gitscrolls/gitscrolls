{
  "name": "gitscrolls-markdown-validator",
  "version": "1.0.0",
  "description": "GitScrolls: The Odyssey of the Dev - Markdown syntax validator for the epic developer mythology",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:syntax": "jest markdown-syntax.test.ts",
    "test:style": "jest style-consistency.test.ts",
    "test:all": "jest",
    "lint": "markdownlint '**/*.md' --ignore node_modules",
    "lint:fix": "markdownlint '**/*.md' --ignore node_modules --fix",
    "test:lint": "npm run lint",
    "docker:test": "docker compose run --rm test",
    "docker:test:ci": "docker compose run --rm -e CI=true test npm run test:ci",
    "docker:test:style": "docker compose run --rm test npm run test:style",
    "docker:lint": "docker compose run --rm test npm run lint",
    "docker:lint:fix": "docker compose run --rm test npm run lint:fix",
    "setup": "npm install && ./scripts/install-hooks.sh",
    "install-hooks": "./scripts/install-hooks.sh"
  },
  "keywords": [
    "narrative",
    "testing",
    "documentation",
    "validation"
  ],
  "author": "GitScrolls Community",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "unist-util-visit": "^5.0.0",
    "markdownlint": "^0.31.1",
    "markdownlint-cli": "^0.37.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
